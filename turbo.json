{
	"$schema": "https://turbo.build/schema.json",
	"globalPassThroughEnv": ["ASDF_*", "NODE_*", "PNPM_*"],
	"globalDependencies": ["package.json", "pnpm-lock.yaml"],
	"daemon": false,
	"tasks": {
		"clean": {
			"cache": false
		},
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["src/**"],
			"outputs": ["dist/**", "etc/*.api.md"]
		},
		"test": {
			"dependsOn": ["^test"]
		},
		"stryker": {
			"inputs": ["stryker.conf.json"],
			"dependsOn": ["test"]
		}
	}
}
