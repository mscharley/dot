{
	"extends": [
		"config:js-lib",
		"schedule:weekends",
		":automergeMinor",
		":semanticCommits",
		":rebaseStalePrs",
		":label(dependencies)"
	],
	"automergeStrategy": "fast-forward",
	"transitiveRemediation": true,
	"ignorePaths": ["**/examples/**"],
	"packageRules": [
		{
			"packageNames": ["@types/node", "node"],
			"allowedVersions": "^20.0.0",
			"major": {
				"enabled": true,
				"semanticCommitType": "fix"
			}
		},
		{
			"matchPackageNames": ["typescript"],
			"major": {
				"semanticCommitType": "fix"
			},
			"minor": {
				"semanticCommitType": "fix"
			}
		},
		{
			"matchPackageNames": ["@microsoft/api-documenter", "@microsoft/api-extractor"],
			"groupName": "api-extractor",
			"additionalBranchPrefix": ""
		},
		{
			"matchPackageNames": ["@mscharley/eslint-config", "@mscharley/prettier-config"],
			"groupName": "eslint packages",
			"additionalBranchPrefix": ""
		}
	]
}
